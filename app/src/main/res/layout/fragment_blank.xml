<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tanzible.sampleproject.HomeFragment">



    <ScrollView
        android:padding="4dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:paddingBottom="30dp"
            >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerView"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:divider="@null"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="225dp"
            android:padding="4dp"
             />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >


        <ImageView
            android:layout_margin="8dp"
            android:background="@drawable/curvebg"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/img1"/>
        <ImageView
            android:layout_margin="8dp"
            android:background="@drawable/curvebg"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/img2"/>

    </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >


            <ImageView
                android:background="@drawable/curvebg"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img3"/>
            <ImageView
                android:background="@drawable/curvebg"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img4"/>

        </LinearLayout>



    </LinearLayout>
    </ScrollView>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:background="#ffffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5.0dip"
            android:padding="0.0dip"
            app:cardCornerRadius="6.0dip"
            app:cardElevation="6.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:orientation="horizontal"
                android:paddingTop="5.0dip"
                android:weightSum="4.0">

                <LinearLayout
                    android:id="@+id/home_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_gravity="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3.0dip"
                        android:paddingBottom="5.0dip"
                        android:text="Home"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#ff00a3d6"
                        android:textSize="12.0dip" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ff00a3d6" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/registraion_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_gravity="center"
                        android:src="@drawable/registraion" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3.0dip"
                        android:text="Registration"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#ff666666"
                        android:textSize="12.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gallery_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_gravity="center"
                        android:src="@drawable/gallery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3.0dip"
                        android:text="Gallery"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#ff666666"
                        android:textSize="12.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_gravity="center"
                        android:src="@drawable/profile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3.0dip"
                        android:text="Imp Contact"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#ff666666"
                        android:textSize="12.0dip" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>